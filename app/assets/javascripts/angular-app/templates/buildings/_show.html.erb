<div ng-include="'buildings/_building_show.html'"></div>
<div class="col-sm-10">
	<div class="col-sm-2">
		<button type="button" class="btn btn-info" ng-click="isCollapsed = !isCollapsed"><i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i> ADD NEW UNIT</button>
	</div>
</div>
<div class="col-sm-4 unit-form">
	<div class="well" uib-collapse="isCollapsed">
		<form ng-submit="addUnit()">
			<div class="row">
				<div class="form-group col-sm-5">
					<input type="text" class="form-control" placeholder="Unit Number" ng-model="unit.unit_number" required></input>
					</div>
					<button class="btn btn-success" ng-disabled="!unit.unit_number" type="submit">Add Unit</button>
				</div>
			</div>
		</form>
	</div>
</div>

