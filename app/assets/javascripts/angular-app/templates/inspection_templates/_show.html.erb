<div class="page-header">
  <h1>Listing Inspection Template Items</h1>
</div>

<loading-indicator loading="loading"></loading-indicator>

<div ng-show="inspection_template">
  <p>Template: {{ inspection_template.name }}</p>

  <div ng-repeat="item in inspection_template.items">

    <span class="col-md-12">
      <span class="col-md-8">{{ item.name }}, Section: {{ item.section }}, Type: {{ item.score_type | scoreDisplay }} </span>
      <button ng-click="toggleEdit(item)" class="col-md-2">Edit Item</button>
      <button  ng-click="deleteItem(item)" class="col-md-2">Delete Item</button>
    </span>

    <span ng-show="item.editing" class="col-md-12">
      <form ng-submit="toggleEdit(item)">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" placeholder="Name" ng-model="item.name"></input>
        </div>

        <div class="form-group">
          <label>Section</label>
          <input type="text" class="form-control" placeholder="Section" ng-model="item.section"></input>
        </div>

        <div class="form-group">
          <label>Score Type</label>
          <select class="form-control" ng-model="item.score_type">
            <option ng-repeat="score_type in validScoreTypes" value="{{ score_type }}">{{ score_type | scoreDisplay}}</option>
          </select>
        </div>
        <button class="col-md-2" type="submit">Save Item</button>
      </form>
    </span>

  </div>
</div>


<form ng-submit="addItem()">
  <h3>New Item</h3>

  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" ng-model="newItem.name"></input>
  </div>

  <div class="form-group">
    <label>Section</label>
    <input type="text" class="form-control" placeholder="Section" ng-model="newItem.section"></input>
  </div>

  <div class="form-group">
    <label>Score Type</label>
    <select class="form-control" ng-model="newItem.score_type">
      <option ng-repeat="score_type in validScoreTypes" value="{{ score_type }}">{{ score_type | scoreDisplay}}</option>
    </select>
  </div>

  <button type="submit">Add Item</button>
</form>